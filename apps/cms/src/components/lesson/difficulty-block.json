{
  "collectionName": "components_lesson_difficulty_blocks",
  "info": {
    "displayName": "Difficulty Block",
    "icon": "layer",
    "description": "Content block for a specific difficulty level"
  },
  "options": {},
  "attributes": {
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "Base",
        "Advance",
        "Stretch"
      ],
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "summary": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "videos"]
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files"]
    },
    "prompts": {
      "type": "component",
      "repeatable": true,
      "component": "lesson.prompt"
    },
    "videoEmbeds": {
      "type": "component",
      "repeatable": true,
      "component": "interactive.video-embed"
    }
  }
}
