# Strapi API Configuration
NUXT_PUBLIC_API_BASE_URL=http://localhost:1337
NUXT_PUBLIC_STRAPI_URL=http://localhost:1337
NUXT_STRAPI_API_TOKEN=your-strapi-api-token-here

# CDN Configuration (for production)
# Use domestic CDN for China deployment
NUXT_PUBLIC_CDN_URL=

# Application Configuration
PORT=3000

# Web Vitals Telemetry Configuration
# Enable/disable web vitals telemetry collection
NUXT_PUBLIC_ENABLE_VITALS_TELEMETRY=true

# Sampling rate (0.0 to 1.0) - collect metrics from X% of sessions
NUXT_PUBLIC_VITALS_SAMPLING_RATE=1.0

# Rate limit: max requests per session per hour
NUXT_PUBLIC_VITALS_RATE_LIMIT=100

# Enable forwarding vitals to Strapi (requires API token)
NUXT_PUBLIC_ENABLE_VITALS_FORWARDING=false

# Development Settings
# For Chinese registry support, uncomment and use in .npmrc:
# registry=https://registry.npmmirror.com
