# Strapi API Configuration
NUXT_PUBLIC_API_BASE_URL=http://localhost:1337
NUXT_PUBLIC_STRAPI_URL=http://localhost:1337
NUXT_STRAPI_API_TOKEN=your-strapi-api-token-here

# CDN Configuration (for production)
# Use domestic CDN for China deployment
NUXT_PUBLIC_CDN_URL=

# Application Configuration
PORT=3000

# Web Vitals Telemetry Configuration
# Enable/disable web vitals telemetry collection
NUXT_PUBLIC_ENABLE_VITALS_TELEMETRY=true

# Sampling rate (0.0 to 1.0) - collect metrics from X% of sessions
NUXT_PUBLIC_VITALS_SAMPLING_RATE=1.0

# Rate limit: max requests per session per hour
NUXT_PUBLIC_VITALS_RATE_LIMIT=100

# Enable forwarding vitals to Strapi (requires API token)
NUXT_PUBLIC_ENABLE_VITALS_FORWARDING=false

# Development Settings
# For Chinese registry support, uncomment and use in .npmrc:
# registry=https://registry.npmmirror.com

# ===== Security Configuration (安全配置) =====
# HTTPS Enforcement (HTTPS 强制)
NUXT_PUBLIC_SECURITY_ENFORCE_HTTPS=true

# HSTS (HTTP Strict Transport Security)
NUXT_PUBLIC_SECURITY_HSTS_ENABLED=true
NUXT_PUBLIC_SECURITY_HSTS_MAX_AGE=31536000
NUXT_PUBLIC_SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
NUXT_PUBLIC_SECURITY_HSTS_PRELOAD=true

# CSP (Content Security Policy)
NUXT_PUBLIC_SECURITY_CSP_ENABLED=true
NUXT_PUBLIC_SECURITY_CSP_DEFAULT_SRC='self'
NUXT_PUBLIC_SECURITY_CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
NUXT_PUBLIC_SECURITY_CSP_STYLE_SRC='self' 'unsafe-inline'
NUXT_PUBLIC_SECURITY_CSP_IMG_SRC='self' data: https:
NUXT_PUBLIC_SECURITY_CSP_CONNECT_SRC='self'
NUXT_PUBLIC_SECURITY_CSP_FONT_SRC='self' data:
NUXT_PUBLIC_SECURITY_CSP_OBJECT_SRC='none'
NUXT_PUBLIC_SECURITY_CSP_MEDIA_SRC='self'
NUXT_PUBLIC_SECURITY_CSP_FRAME_SRC='none'
NUXT_PUBLIC_SECURITY_CSP_BASE_URI='self'
NUXT_PUBLIC_SECURITY_CSP_FORM_ACTION='self'
NUXT_PUBLIC_SECURITY_CSP_FRAME_ANCESTORS='none'
NUXT_PUBLIC_SECURITY_CSP_UPGRADE_INSECURE_REQUESTS=true
NUXT_PUBLIC_SECURITY_CSP_REPORT_URI=

# Other Security Headers
NUXT_PUBLIC_SECURITY_X_FRAME_OPTIONS=DENY
NUXT_PUBLIC_SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
NUXT_PUBLIC_SECURITY_PERMISSIONS_POLICY=camera=(), microphone=(), geolocation=()
NUXT_PUBLIC_SECURITY_X_CONTENT_TYPE_OPTIONS=true
NUXT_PUBLIC_SECURITY_X_XSS_PROTECTION=true
NUXT_PUBLIC_SECURITY_SECURE_COOKIES=true

# Rate Limiting (访问频率限制)
NUXT_PUBLIC_SECURITY_RATE_LIMIT_ENABLED=true
NUXT_PUBLIC_SECURITY_RATE_LIMIT_MAX_REQUESTS=100
NUXT_PUBLIC_SECURITY_RATE_LIMIT_WINDOW_MS=60000
NUXT_PUBLIC_SECURITY_RATE_LIMIT_SKIP_PATHS=/_nuxt,/fonts,/images,/_ipx
