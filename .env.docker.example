# Docker Compose Environment Variables
# Copy this file to .env.docker and update with your values
# Docker Compose 环境变量
# 将此文件复制为 .env.docker 并更新为您的值

# Database Configuration (数据库配置)
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=change_me_in_production

# Strapi Keys (Generate with: openssl rand -base64 32)
# Strapi 密钥 (生成命令: openssl rand -base64 32)
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=your_api_token_salt
ADMIN_JWT_SECRET=your_admin_jwt_secret
TRANSFER_TOKEN_SALT=your_transfer_token_salt
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Server Configuration (服务器配置)
HOST=0.0.0.0
PORT=1337

# Frontend URL (前端URL)
CLIENT_URL=http://localhost:3000

# Nuxt Configuration (Nuxt配置)
NUXT_PUBLIC_STRAPI_URL=http://localhost:1337
NUXT_STRAPI_API_TOKEN=your_strapi_api_token
NUXT_PUBLIC_API_BASE_URL=http://localhost:1337

# Redis Configuration (Optional) (Redis配置 - 可选)
REDIS_HOST=redis
REDIS_PORT=6379
