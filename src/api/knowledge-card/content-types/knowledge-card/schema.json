{
  "kind": "collectionType",
  "collectionName": "knowledge_cards",
  "info": {
    "singularName": "knowledge-card",
    "pluralName": "knowledge-cards",
    "displayName": "Knowledge Card"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Theory",
        "Case Study",
        "Student Work",
        "AI Prompt",
        "Extended Thinking"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "media": {
      "type": "media",
      "multiple": true
    },
    "promptText": {
      "type": "text"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag"
    },
    "qrLink": {
      "type": "string",
      "customField": "plugin::content-type-builder.url"
    },
    "lessons": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::lesson.lesson",
      "mappedBy": "knowledge_cards"
    }
  }
}
