#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/engine/project/node_modules/@strapi/cloud-cli/bin/node_modules:/home/engine/project/node_modules/@strapi/cloud-cli/node_modules:/home/engine/project/node_modules/@strapi/node_modules:/home/engine/project/node_modules:/home/engine/node_modules:/home/node_modules:/node_modules:/home/engine/project/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/engine/project/node_modules/@strapi/cloud-cli/bin/node_modules:/home/engine/project/node_modules/@strapi/cloud-cli/node_modules:/home/engine/project/node_modules/@strapi/node_modules:/home/engine/project/node_modules:/home/engine/node_modules:/home/node_modules:/node_modules:/home/engine/project/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@strapi/cloud-cli/bin/index.js" "$@"
else
  exec node  "$basedir/../@strapi/cloud-cli/bin/index.js" "$@"
fi
